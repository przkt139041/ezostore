{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,                    // ⛔️ WYŁĄCZ ścisły tryb
    "noImplicitAny": false,            // pozwala na `any`
    "strictNullChecks": false,         // pozwala na `null` i `undefined` wszędzie
    "strictFunctionTypes": false,      // mniej agresywne dopasowanie funkcji
    "strictBindCallApply": false,
    "noImplicitThis": false,
    "alwaysStrict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
